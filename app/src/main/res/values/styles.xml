<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/LightTextViewStyle</item>
        <item name="imageButtonStyle">@style/DarkIconImageButtonStyle</item>
        <item name="buttonStyle">@style/DarkButtonInToolbarStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="bottomNavigationStyle">@style/BottomNavigationViewStyle</item>
        <item name="searchViewStyle">@style/AppSearchViewStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--    Theme for ProgressBar    -->
    <style name="CircularProgressBarTheme">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!--    Theme for AlertDialog or DialogFragment    -->
    <style name="AlertDialogWithRecyclerViewTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="AlertDialogWithRecyclerViewTheme">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>

    <style name="FullDialogFragmentTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="MyAlertButtonTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!--    Theme for RatingBar    -->
    <style name="RatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">@color/colorPrimaryLight</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="android:paddingTop">@dimen/normal_padding</item>
    </style>

    <!--    Style for ImageView    -->
    <style name="IconImageViewStyle">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--    Style for TabLayout    -->
    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextStyle</item>
        <item name="tabInlineLabel">true</item>
        <item name="tabIndicatorHeight">@dimen/small_padding</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/bottom_navigation_item_normal</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="MyTabTextStyle">
        <item name="android:textColor">@color/bottom_navigation_item_normal</item>
        <item name="android:textSize">@dimen/small_content_text_size</item>
    </style>

    <!--    Style for TextView    -->
    <style name="LightTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/small_content_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/small_padding</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightGrayTextView">
        <item name="android:textColor">@color/bottom_navigation_item_normal</item>
    </style>

    <!--    Style for ImageButton    -->
    <style name="DarkIconImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="iconifiedByDefault">true</item>
    </style>

    <style name="LightSmallIconImageButtonStyle">
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

    <!--    Style for Button    -->
    <style name="DarkButtonInToolbarStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <!--    Style for EditText    -->
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/small_content_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/small_padding</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/bottom_navigation_item_normal</item>
    </style>

    <!--    Style for Spinner    -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:spinnerMode">dialog</item>
        <item name="android:spinnerItemStyle">@style/MySpinnerItemStyle</item>
    </style>

    <style name="MySpinnerItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/small_content_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">@dimen/small_padding</item>
    </style>

    <!--    Style for BottomNavigationView    -->
    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/white</item>
        <item name="android:animateLayoutChanges">false</item>
        <item name="itemIconTint">@drawable/nav_item_tint</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <!--    Style for SearchView    -->
    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/small_content_text_size</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/bottom_navigation_item_normal</item>
        <item name="android:background">@drawable/find_condition_background</item>
    </style>

    <style name="ConstraintLayoutToolbarStyle">
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/normal_padding</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>

</resources>
