<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="SmallDialogTheme">
        <item name="android:windowIsFloating">true</item>
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
        <item name="android:windowBackground">@color/white</item>
<!--        <item name="windowFixedHeightMajor">90%</item>-->
<!--        <item name="windowFixedHeightMinor">90%</item>-->
    </style>

    <style name="FullDialogTheme">
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="RatingBar">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/small_content_text_size</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/bottom_navigation_item_normal</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>
    <style name="AppSearchView1" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">@dimen/small_content_text_size</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/bottom_navigation_item_normal</item>
<!--        <item name="android:tint">@color/white</item>-->
    </style>
</resources>
