<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/negative_button"
    android:paddingHorizontal="8dp">
    <TextView
        android:id="@+id/textview_filter_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner_tab_name"
        app:layout_constraintBottom_toBottomOf="@id/spinner_tab_name"/>

    <Spinner
        android:id="@+id/spinner_tab_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textview_filter_name"
        app:layout_constraintTop_toTopOf="parent"
        android:spinnerMode="dialog" />
</androidx.constraintlayout.widget.ConstraintLayout>