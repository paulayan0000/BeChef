<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.DetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_base_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <ImageView
                    android:id="@+id/imageview_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/black"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageview_thumbnail_foreground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_play_circle_filled"
                    app:layout_constraintTop_toTopOf="@id/imageview_thumbnail"
                    app:layout_constraintStart_toStartOf="@+id/imageview_thumbnail"
                    app:layout_constraintEnd_toEndOf="@id/imageview_thumbnail"
                    app:layout_constraintBottom_toBottomOf="@id/imageview_thumbnail"/>

                <TextView
                    android:id="@+id/textview_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_margin="8dp"
                    android:textColor="@color/link_text"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/imageview_thumbnail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <TextView
                    android:id="@+id/textview_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_goneMarginTop="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_text_size"
                    android:textIsSelectable="true"
                    app:layout_constraintTop_toBottomOf="@id/textview_tags"/>
                <TextView
                    android:id="@+id/textview_time_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@id/textview_title" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="8dp"
                android:visibility="invisible"
                android:background="@color/bottom_navigation_item_normal"
                app:layout_constraintTop_toBottomOf="@id/constraintlayout_base_info"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:paddingTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintlayout_base_info" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translucent_bkg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/imagebotton_toolbar_back"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/ic_arrow_back"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageButton
            android:id="@+id/imagebutton_toolbar_more"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:src="@drawable/ic_more"
            android:tint="@color/white"
            android:background="#00000000"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintTop_toTopOf="@id/imagebotton_toolbar_back"
            app:layout_constraintBottom_toBottomOf="@id/imagebotton_toolbar_back"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>