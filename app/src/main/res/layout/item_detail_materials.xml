<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view_top_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:background="@color/bottom_navigation_item_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textview_material_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="8dp"
        app:layout_goneMarginTop="0dp"
        android:text="預備食材"
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintTop_toBottomOf="@id/view_top_divider"/>

    <TextView
        android:id="@+id/textview_materail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textview_material_type"
        app:layout_constraintTop_toBottomOf="@id/textview_material_type" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/textview_material_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:layout_marginHorizontal="8dp"
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textview_material_type"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:background="@color/bottom_navigation_item_normal"
        app:layout_constraintTop_toBottomOf="@id/textview_materail_name"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>