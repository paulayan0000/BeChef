<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discover.DiscoverFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/discover_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            app:layout_scrollFlags="scroll|snap|enterAlways"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageButton
                android:id="@+id/imagebotton_toolbar_menu"
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:layout_marginVertical="8dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/ic_menu_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textview_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="發現"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size"
                app:layout_constraintTop_toTopOf="@id/imagebotton_toolbar_menu"
                app:layout_constraintBottom_toBottomOf="@id/imagebotton_toolbar_menu"
                app:layout_constraintStart_toEndOf="@id/imagebotton_toolbar_menu"/>
            <ImageButton
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/ic_search"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/imagebotton_toolbar_menu"
                app:layout_constraintBottom_toBottomOf="@id/imagebotton_toolbar_menu"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="4dp"
                app:tabMode="scrollable"
                android:paddingHorizontal="16dp"
                app:tabSelectedTextColor="@android:color/white"
                app:tabInlineLabel="true"
                app:tabTextColor="@color/bottom_navigation_item_normal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_divider_tab"/>
            <View
                android:id="@+id/view_divider_tab"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/bottom_navigation_item_normal"
                android:layout_marginEnd="4dp"
                app:layout_constraintTop_toTopOf="@id/tabLayout"
                app:layout_constraintBottom_toBottomOf="@id/tabLayout"
                app:layout_constraintEnd_toStartOf="@id/imagebotttom_tab_right" />
            <ImageButton
                android:id="@+id/imagebotttom_tab_right"
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/ic_edit"
                android:background="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="@id/tabLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/tabLayout"/>
            <View
                android:id="@+id/view_tablayout_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom_navigation_item_normal"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>