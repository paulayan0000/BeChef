<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:paddingBottom="8dp"
    android:background="@color/white">
    <CheckBox
        android:id="@+id/radio_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:layout_marginStart="8dp"
        android:button="@drawable/custom_checkbox"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/imageview_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageview_thumbnail" />

    <ImageView
        android:id="@+id/imageview_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/all_picture_placeholder"
        app:layout_constraintStart_toEndOf="@id/radio_item"
        app:layout_constraintTop_toTopOf="@id/textview_title" />

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintEnd_toStartOf="@+id/imagebotton"
        app:layout_constraintStart_toEndOf="@id/imageview_thumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:lineSpacingExtra="4dp"
        android:text="#tag1 #tag2 #tag3 #tag4 #tag5 #tag6"
        android:textColor="@color/bottom_navigation_item_normal"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintStart_toStartOf="@id/textview_title"
        app:layout_constraintEnd_toEndOf="@id/textview_title"
        app:layout_constraintTop_toBottomOf="@id/textview_title" />

    <TextView
        android:id="@+id/textview_time_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="4dp"
        android:singleLine="true"
        android:text="50分鐘    2人份    4.5分"
        android:textColor="@color/bottom_navigation_item_normal"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintEnd_toEndOf="@id/textview_title"
        app:layout_constraintStart_toStartOf="@id/textview_title"
        app:layout_constraintTop_toBottomOf="@id/textview_tags" />

    <ImageButton
        android:id="@+id/imagebotton"
        android:layout_width="@dimen/small_icon_size"
        android:layout_height="@dimen/small_icon_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageview_thumbnail"
        app:layout_constraintBottom_toBottomOf="@id/imageview_thumbnail"
        android:background="@drawable/ic_more"/>
</androidx.constraintlayout.widget.ConstraintLayout>