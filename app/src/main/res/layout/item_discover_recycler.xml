<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_recycler_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:contentPadding="8dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview_video_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:maxLines="2"
            android:lineSpacingExtra="8dp"
            android:ellipsize="end"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/imageview_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imagebutton_bookmark"/>

        <TextView
            android:id="@+id/textview_video_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/textview_video_title"
            app:layout_constraintEnd_toStartOf="@id/imagebutton_bookmark"
            app:layout_constraintStart_toStartOf="@id/imageview_thumbnail"/>

        <ImageButton
            android:id="@+id/imagebutton_bookmark"
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            app:layout_constraintTop_toTopOf="@id/textview_video_title"
            app:layout_constraintBottom_toBottomOf="@id/textview_video_time"
            app:layout_constraintEnd_toEndOf="@id/imageview_thumbnail"
            android:background="@drawable/ic_bookmark"/>

        <ImageView
            android:id="@+id/imageview_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@id/textview_video_description"
            app:layout_constraintEnd_toEndOf="@id/textview_video_description"
            app:layout_constraintTop_toBottomOf="@id/textview_video_time"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play_circle_filled"
            app:layout_constraintStart_toStartOf="@id/imageview_thumbnail"
            app:layout_constraintEnd_toEndOf="@id/imageview_thumbnail"
            app:layout_constraintTop_toTopOf="@id/imageview_thumbnail"
            app:layout_constraintBottom_toBottomOf="@id/imageview_thumbnail"/>

        <TextView
            android:id="@+id/textview_video_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/black"
            android:textSize="@dimen/small_content_text_size"
            app:layout_constraintTop_toBottomOf="@id/imageview_thumbnail"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>