<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="8dp"
        android:background="@color/colorPrimary">
        <ImageButton
            android:id="@+id/imagebutton_toolbar_back"
            android:layout_width="@dimen/normal_icon_size"
            android:layout_height="@dimen/normal_icon_size"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/ic_arrow_back"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toBottomOf="@id/search_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/search_view" />
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@id/imagebutton_toolbar_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:theme="@style/AppSearchView1"
            android:background="@drawable/negative_button"
            android:layout_margin="8dp"
            app:queryHint="請輸入關鍵字" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_search_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout_toolbar"
        android:layout_marginHorizontal="8dp"/>
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_search_filter"
        android:background="@color/bottom_navigation_item_normal"/>
    <TextView
        android:id="@+id/textview_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_margin="8dp"
        android:textSize="@dimen/small_content_text_size"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="搜尋結果"
        app:layout_constraintTop_toBottomOf="@id/view_divider"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_search_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/textview_search_result"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/view_search_translucent_mask"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/constraintlayout_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/translucent_bkg"
        android:visibility="invisible"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"/>
</androidx.constraintlayout.widget.ConstraintLayout>