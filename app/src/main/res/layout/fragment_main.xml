<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discover.DiscoverFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:background="@color/colorPrimary"
            android:gravity="center_vertical"
            app:layout_scrollFlags="scroll|snap|enterAlways"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <ImageButton
                android:id="@+id/imagebutton_toolbar_menu"
                android:layout_width="@dimen/title_height"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_menu_white"
                android:background="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/textview_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/title_discover"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/title_text_size"
                app:layout_constraintStart_toEndOf="@id/imagebutton_toolbar_menu"/>
            <View
                android:id="@+id/view_divider_tab"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/bottom_navigation_item_normal"
                app:layout_constraintTop_toTopOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                app:layout_constraintEnd_toStartOf="@id/imagebutton_find" />
            <ImageButton
                android:id="@+id/imagebutton_find"
                android:layout_width="@dimen/title_height"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_search"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/imagebutton_edit" />

            <ImageButton
                android:id="@+id/imagebutton_edit"
                android:layout_width="@dimen/title_height"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_edit"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toStartOf="@id/imagebutton_new"/>

            <ImageButton
                android:id="@+id/imagebutton_new"
                android:layout_width="@dimen/title_height"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_new"
                android:background="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabIndicatorColor="@color/white"
                app:tabIndicatorHeight="4dp"
                app:tabMode="scrollable"
                android:paddingHorizontal="16dp"
                android:paddingBottom="1dp"
                app:tabSelectedTextColor="@android:color/white"
                app:tabInlineLabel="true"
                app:tabTextColor="@color/bottom_navigation_item_normal" />
            <View
                android:id="@+id/view_tablayout_bottom"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/bottom_navigation_item_normal"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>