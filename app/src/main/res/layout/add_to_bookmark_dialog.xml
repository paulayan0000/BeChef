<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/textview_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="書籤"
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Spinner
        android:id="@+id/spinner_tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/textview_tab"
        app:layout_constraintStart_toEndOf="@+id/textview_tab"
        app:layout_constraintTop_toTopOf="@+id/textview_tab" />

    <EditText
        android:id="@+id/edittext_new_tab_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="請輸入欲新增的書籤名"
        android:inputType="text"
        app:backgroundTint="@color/colorPrimary"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintStart_toStartOf="@+id/spinner_tab_name"
        app:layout_constraintTop_toBottomOf="@+id/spinner_tab_name" />

    <TextView
        android:id="@+id/textview_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="評分"
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintStart_toStartOf="@+id/textview_tab"
        app:layout_constraintTop_toBottomOf="@+id/edittext_new_tab_name" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:theme="@style/RatingBar"
        app:layout_constraintBottom_toBottomOf="@+id/textview_rating"
        app:layout_constraintStart_toStartOf="@+id/spinner_tab_name"
        app:layout_constraintTop_toTopOf="@+id/textview_rating" />

    <Button
        android:id="@+id/negative_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/negative_button"
        android:text="取消"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/positive_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_bar" />

    <Button
        android:id="@+id/positive_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/positive_button"
        android:text="儲存"
        android:textColor="@color/white"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/negative_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/negative_button"
        app:layout_constraintTop_toTopOf="@id/negative_button" />

</androidx.constraintlayout.widget.ConstraintLayout>