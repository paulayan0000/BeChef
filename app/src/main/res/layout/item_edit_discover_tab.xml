<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imagebutton_remove"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:background="@color/white"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_remove"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview_tab_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="@dimen/small_content_text_size"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imagebutton_remove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagebutton_remove"
        app:layout_constraintTop_toTopOf="@id/imagebutton_remove" />

</androidx.constraintlayout.widget.ConstraintLayout>