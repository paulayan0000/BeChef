<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageview_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_thumbnail_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_circle_filled"
        app:layout_constraintTop_toTopOf="@id/imageview_thumbnail"
        app:layout_constraintBottom_toBottomOf="@id/imageview_thumbnail"/>

    <TextView
        android:id="@+id/textview_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_margin="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintTop_toBottomOf="@id/imageview_thumbnail"/>

    <TextView
        android:id="@+id/textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_goneMarginTop="8dp"
        android:layout_marginHorizontal="8dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/title_text_size"
        android:textIsSelectable="true"
        app:layout_constraintTop_toBottomOf="@id/textview_tags"/>

    <TextView
        android:id="@+id/textview_time_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:text=""
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintTop_toBottomOf="@id/textview_title" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="8dp"
        android:background="@color/bottom_navigation_item_normal"
        app:layout_constraintTop_toBottomOf="@id/textview_time_count"/>

    <TextView
        android:id="@+id/textview_info_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toBottomOf="@id/view_divider"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textIsSelectable="true"
        android:textSize="@dimen/small_content_text_size"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
