<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <EditText
        android:id="@+id/edittext_material_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/material_group_name_hint"
        app:layout_constraintEnd_toStartOf="@id/imagebutton_clear"
        app:layout_constraintStart_toEndOf="@+id/imagebutton_remove"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imagebutton_remove"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:src="@drawable/ic_remove"
        style="@style/LightSmallIconImageButtonStyle"
        app:layout_constraintBottom_toBottomOf="@id/edittext_material_group"
        app:layout_constraintStart_toEndOf="@id/imagebutton_add"
        app:layout_constraintTop_toTopOf="@id/edittext_material_group" />

    <ImageButton
        android:id="@+id/imagebutton_add"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:src="@drawable/ic_add_image"
        android:tint="@color/colorPrimary"
        style="@style/LightSmallIconImageButtonStyle"
        app:layout_constraintBottom_toBottomOf="@id/edittext_material_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edittext_material_group" />

    <ImageButton
        android:id="@+id/imagebutton_clear"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:src="@drawable/ic_clear"
        style="@style/LightSmallIconImageButtonStyle"
        app:layout_constraintBottom_toBottomOf="@id/edittext_material_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edittext_material_group" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_material_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/imagebutton_clear"
        app:layout_constraintStart_toStartOf="@+id/imagebutton_remove"
        app:layout_constraintTop_toBottomOf="@id/edittext_material_group" />

</androidx.constraintlayout.widget.ConstraintLayout>