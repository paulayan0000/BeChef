<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <EditText
        android:id="@+id/edittext_material_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="類別名稱"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        android:inputType="text"
        android:maxLines="1"
        app:backgroundTint="@color/colorPrimary"
        app:layout_constraintEnd_toStartOf="@id/imagebutton_clear"
        app:layout_constraintStart_toEndOf="@+id/imagebutton_remove"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imagebutton_remove"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:background="@color/white"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_remove"
        app:layout_constraintBottom_toBottomOf="@id/edittext_material_group"
        app:layout_constraintStart_toEndOf="@id/imagebutton_add"
        app:layout_constraintTop_toTopOf="@id/edittext_material_group" />

    <ImageButton
        android:id="@+id/imagebutton_add"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:layout_marginHorizontal="8dp"
        android:background="@color/white"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add_image"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/edittext_material_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edittext_material_group" />

    <ImageButton
        android:id="@+id/imagebutton_clear"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_clear"
        app:layout_constraintBottom_toBottomOf="@id/edittext_material_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/edittext_material_group" />

    <TextView
        android:id="@+id/textview_material_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:text="預備食材"
        android:textColor="@color/black"
        android:textSize="@dimen/small_content_text_size"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/edittext_material_group"
        app:layout_constraintStart_toEndOf="@id/imagebutton_remove"
        app:layout_constraintTop_toTopOf="@id/edittext_material_group" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_material_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/normal_icon_size"
        app:layout_constraintEnd_toEndOf="@+id/imagebutton_clear"
        app:layout_constraintStart_toStartOf="@+id/imagebutton_add"
        app:layout_constraintTop_toBottomOf="@id/edittext_material_group" />
</androidx.constraintlayout.widget.ConstraintLayout>