<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imagebutton_add"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:src="@drawable/ic_add_image"
        android:tint="@color/colorPrimary"
        android:visibility="gone"
        style="@style/LightSmallIconImageButtonStyle"
        app:layout_constraintBottom_toBottomOf="@id/imageview_step_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageview_step_image" />

    <ImageView
        android:id="@+id/imageview_step_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imagebutton_add"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageview_step_image_forground"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:src="@drawable/ic_edit"
        android:visibility="gone"
        style="@style/IconImageViewStyle"
        app:layout_constraintStart_toStartOf="@id/imageview_step_image"
        app:layout_constraintEnd_toEndOf="@id/imageview_step_image"
        app:layout_constraintTop_toTopOf="@id/imageview_step_image"
        app:layout_constraintBottom_toBottomOf="@id/imageview_step_image" />

</androidx.constraintlayout.widget.ConstraintLayout>